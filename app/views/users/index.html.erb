<table>
  <%= render partial: 'books/list', locals: { users: @users } %>
</table>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<h2>Users</h2>
<% @users.each do |user| %>
  <h3><%= user.name %></h3>
    <% user.books.each do |post| %>
      <p><strong>Title:</strong> <%= post.title %></p>
      <p><strong>Opinion:</strong> <%= post.body %></p>
      <%= link_to 'Show', user_path(@book) %>
    <% end %>
<% end %>