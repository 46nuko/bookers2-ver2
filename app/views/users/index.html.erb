<table>
  <%= render partial: 'books/list', locals: { users: @users } %>
</table>
<h2>New book</h2>
  <%= render partial: 'books/form', locals: { book: @book } %>
<h2>Users</h2>
<% @users.each do |user| %>
  <h3><%= user.name %></h3>
    <% user.books.each do |post| %>
      <p><strong>Title:</strong> <%= post.title %></p>
      <p><strong>Opinion:</strong> <%= post.body %></p>
      <%= link_to 'Show', user_path(@book) %>
    <% end %>
<% end %>