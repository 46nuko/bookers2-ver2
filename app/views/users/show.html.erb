<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <table>
        <%= render partial: 'books/list', locals: { users: @users } %>
      </table>
      <h2 class="mt-3">New book</h2>
      <%= render partial: 'books/form', locals: { book: @book } %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag book.get_image %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@user) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
  </div>
</div>
