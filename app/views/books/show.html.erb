<table>
  <%= render partial: 'list', locals: { users: @users } %>
</table>
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<h1>Book detail</h1>
<div>
  <%= image_tag @book.get_image %>
  <p>a：<%= @book.title %></p>
  <p>b：<%= @book.body %></p>
  <p>c：<%= @book.user.name %></p>
  </div>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>