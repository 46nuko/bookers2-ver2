<%= form_with model: book  do |form| %>
<div class="form-group">
  <h4>Title</h4>
  <%= form.text_field :title,class:"form_control" %>
</div>
<div class="form-group">
  <h4>Opinion</h4>
  <%= form.text_area :body,class:"form_control" %>
</div>
<div class="form_group">
    <%= form.submit "Create Book",class:"btn btn-success" %>
</div>
<% end %>