<%= form_with model: book do |form| %>
<div class="form-group">
  <h4>Title</h4>
  <%= form.text_field :title,class:"form-control title" %>
</div>
<div class="form-group">
  <h4>Opinion</h4>
  <%= form.text_field :body,class:"form-control body" %>
</div>
<div class="form-group">
    <%= form.submit "Create Book",class:"btn btn-success" %>
</div>
<% end %>