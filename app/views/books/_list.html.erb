<div>
  <%= flash[:notice] %>
</div>
<h1>User info</h1>
<tbody>
  <tr>
    <% if @user.profile_image.attached? %>
      <%= image_tag url_for(@user.profile_image),size:100 %>
    <% else %>
      <%= image_tag 'no_image.jpg',size:"100x100" %>
    <% end %>
</tr>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</tbody>