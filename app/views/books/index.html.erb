<h1>User info</h1>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>ショップ名</h4>
  <%= f.text_field :title %>
  <h4>説明</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>
<% end %>
<h1>Books</h1>
<% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
      <%= image_tag book.get_image %>
    <% end %>
    <%= link_to book_path(book.id) do %>
      <p>Title：<%= book.title %></p>
    <% end %>
    <p>Opinion：<%= book.body %></p>
  </div>
<% end %>